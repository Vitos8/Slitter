{
     "version": 2,
     "builds": [
          {
               "src": "api/**/*.ts",
               "use": "@vercel/node"
          },
          {
               "src": "next.config.js",
               "use": "@vercel/static"
          },
          {
               "src": "pages/**/*.js",
               "use": "@vercel/static"
          }
     ],
     "routes": [
          {
               "src": "/api/(.*)",
               "dest": "/api/$1"
          },
          {
               "src": "/(.*)",
               "dest": "/$1"
          }
     ],
     "env": {
          "PRISMA_ENDPOINT": "https://your-prisma-api-endpoint.com",
          "SECRET_KEY": "NEXTAUTH_SECRET"
     },
     "rewrites": [{ "source": "/(.*)", "destination": "/" }]
}
